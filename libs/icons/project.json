{
  "name": "icons",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/icons/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project icons --web",
  "targets": {
    "svg": {
      "command": "svgr libs/icons/assets --config-file libs/icons/.svgrrc.cjs"
    },
    "build": {
      "dependsOn": [
        "svg"
      ],
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/icons",
        "main": "libs/icons/src/index.ts",
        "tsConfig": "libs/icons/tsconfig.lib.json",
        "assets": [
          "libs/icons/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/icons/**/*.{ts,tsx,js,jsx}",
          "libs/icons/package.json"
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/libs/{projectName}"
      }
    }
  },
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/libs/{projectName}",
        "currentVersionResolver": "git-tag"
      }
    }
  }
}