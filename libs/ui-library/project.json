{
  "name": "ui-library",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/{projectName}/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project ui-library --web",
  "targets": {
    "build": {
      "dependsOn": [
        "lint"
      ],
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/{projectName}",
        "main": "libs/{projectName}/src/index.ts",
        "tsConfig": "libs/{projectName}/tsconfig.lib.json",
        "assets": [
          "libs/{projectName}/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/{projectName}/**/*.{ts,tsx,js,jsx}",
          "libs/{projectName}/package.json"
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/libs/{projectName}"
      }
    }
  },
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/libs/{projectName}",
        "currentVersionResolver": "git-tag"
      }
    }
  }
}